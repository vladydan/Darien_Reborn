NAME	= Darien_Reborn

SRCS	= srcs/main.c \
	  srcs/check_buttons.c \
	  srcs/xmalloc.c

OBJS	= $(SRCS:.c=.o)

CFLAGS	+= -Iinclude/ -Wall -Wextra -lSDL -lSDL -lSDLmain  -lSDL_image

all: $(NAME)

$(NAME): $(OBJS)
	cc -o $(NAME) $(SRCS) $(CFLAGS)
clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
