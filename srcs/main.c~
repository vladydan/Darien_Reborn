#include "reborn.h"

int		which_button(SDL_Event event)
{
  int		x;
  int		y;

  x = event.button.x;
  y = event.button.y;
  if (check_button(100, x, 200, y) == 1)
    return (
}

int		menu(t_game *game)
{
  SDL_Surface	*menu;
  SDL_Rect	pos;
  SDL_Event	event;
  char		finish;
  int		button;

  finish = 1;
  pos.x = 0;
  pos.y = 0;
  menu = IMG_Load("sprites/menu.jpeg");
  SDL_BlitSurface(menu, NULL, game->sdl.screen,
		  &pos);
  while (finish)
    {
      SDL_WaitEvent(&event);
      if (event.type == SDL_QUIT)
	finish = 0;
      if (event.type == SDL_MOUSEBUTTONUP)
	button = which_button(event);
    }
  SDL_Flip(game->sdl.screen);
  return (0);
}

int		main(void)
{
  t_game	*game;

  game = xmalloc(sizeof(t_game));
  SDL_Init(SDL_INIT_VIDEO);
  game->sdl.screen = SDL_SetVideoMode(LENGH, HEIGH, 32, SDL_HWSURFACE);
  menu(game);
  return (EXIT_SUCCESS);
}
